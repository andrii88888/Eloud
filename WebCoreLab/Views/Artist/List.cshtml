@model List<WebCoreLab.Domain.Artist>
@using WebCoreLab.Domain
@{
    ViewData["Title"] = "List";
}


<div class="row">
    <div class="col-md-3">
       
    </div>
 </div>

    <h2 style="margin-left: 502px;margin-bottom: 30px;">Artists</h2>
    <div class="row" style="margin-right: 160px;margin-left: 173px;">
        <div class="row" style="margin-right: 15px;margin-left: 160px;">
            <form asp-action="List" method="get">
                <div class="form-actions no-color">
                    <p style="text-align:center">
                        Find by name: <input type="text" name="SearchString" value="@ViewData["currentFilter"]" />
                        <input type="submit" value="Search" class="btn btn-default" />
                        <a asp-action="List" style="background-color: lightgray; color:white;
                         display: inline-block; padding: 7px 20px; border-top-left-radius: 5px;
                            border-bottom-left-radius: 5px;
                            border-bottom-right-radius: 5px;
                            border-top-right-radius: 5px; text-align:center">Back</a>
                    </p>
                </div>
            </form>
            <div class="col-lg-12" align="left">
                @if (ViewContext.HttpContext.User.IsInRole("admin"))
                {
                    <input type="button" class="btn btn-primary" style="margin-bottom: 10px;margin-left: -77px; margin-top: -72px" value="Add" onclick="location.href='@Url.Action("edit","Artist")'" />
                }
            </div>
        </div>
        <div class="col-lg-12" style="width: 90%">
            <section class="panel" style="margin-left: 80px; margin-right: 25px ">
                @*<header class="panel-heading">Artists </header>*@
                <table class="table table-striped table-advance table-hover">
                    <tbody>
                        <tr>
                            <th><i class="icon_profile"></i> Name</th>
                            <th><i class=""></i> Country</th>
                            <th><i class="icon_pin_alt" style="margin-left: 70px"></i> Admin actions</th>
                        </tr>
                        @if (Model != null)
                        {
                            for (int i = 0; i < Model.Count; i++)
                            {
                                <tr>
                                    <td>@Model[i].Name</td>
                                    <td>@Model[i].Country</td>
                                    <td>
                                        <div class="btn-group" style="margin-left: 56px;">
                                            <a class="btn btn-success" href="@Url.Action("edit", "Artist", new { @id = @Model[i].ID })">Edit<i class="icon_pencil"></i></a>
                                            <a class="btn btn-danger" href="@Url.Action("remove", "Artist", new { @id = @Model[i].ID })">Delete<i class="icon_close_alt2"></i></a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        }
                    </tbody>
                </table>
            </section>
        </div>

    </div>
