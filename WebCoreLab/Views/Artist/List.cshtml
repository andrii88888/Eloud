@model List<WebCoreLab.Domain.Artist>
@using WebCoreLab.Domain
@{
    ViewData["Title"] = "List";
}
<h2>Artists</h2>
    <div class="row">
        <div class="col-lg-12">
            <section class="panel">
                @*<header class="panel-heading">Artists </header>*@
                <table class="table table-striped table-advance table-hover">
                    <tbody>
                        <tr>
                            <th><i class="icon_profile"></i> Name</th>
                            <th><i class=""></i> Country</th>
                            <th><i class="icon_pin_alt"></i> Admin actions</th>
                        </tr>
                        @if (Model != null)
                    {
                        for (int i = 0; i < Model.Count; i++)
                        {
                            <tr>
                                <td>@Model[i].Name</td>
                                <td>@Model[i].Country</td>
                                <td>
                                    <div class="btn-group">
                                        <a class="btn btn-success" href="@Url.Action("edit", "Artist", new { @id = @Model[i].ID })">Edit<i class="icon_pencil"></i></a>
                                        <a class="btn btn-danger" href="@Url.Action("remove", "Artist", new { @id = @Model[i].ID })">Delete<i class="icon_close_alt2"></i></a>
                                    </div>
                                </td>
                            </tr>
                    }
                }
                    </tbody>
                </table>
            </section>
        </div>
        <div class="row">
            <div class="col-lg-12" align="right">
                @if (ViewContext.HttpContext.User.IsInRole("admin"))
            {
                <input type="button" class="btn btn-success" value="Add" style="align-self:center" onclick="location.href='@Url.Action("edit","Artist")'" />
        }
            </div>
        </div>
    </div>
