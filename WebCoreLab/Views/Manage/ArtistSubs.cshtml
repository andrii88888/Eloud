@using WebCoreLab.Domain
@model List<WebCoreLab.Domain.Artist>
@{
    ViewData["Title"] = "ArtistSubs";
    ViewData.AddActivePage(ManageNavPages.ArtistSubs);
}

<div class="row">
    <div class="col-lg-12">
        <section class="panel">
            @*<header class="panel-heading" style="text-align:center">Artists </header>*@
            <div class="row" style="margin-right: 400px; margin-left: 100px;">
                <table class="table table-striped table-advance table-hover">
                    <tbody>
                        <tr>
                            <th><i class=""></i> Name </th>
                            <th><i class="icon_pin_alt"></i> Unfollow</th>

                        </tr>
                        @if (Model != null)
            {
                for (int i = 0; i < Model.Count; i++)
                {
                    <tr>
                        <td>@Model[i].Name</td>
                        <td><a asp-controller="Manage" asp-action="Unsubscribe" asp-route-id="@Model[i].ID" class="btn btn-danger">Unsubscribe</a></td>
                    </tr>

    }
}
                    </tbody>
                </table>
            </div>
           
        </section>
    </div>
</div>
